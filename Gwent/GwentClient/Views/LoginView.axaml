<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1920" d:DesignHeight="1080"
             x:Class="GwentClient.Views.LoginView">
	<Panel>
		<Image Stretch="Fill" Source="/Assets/Background.jpg"/>
		
		<DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock DockPanel.Dock="Top" FontWeight="ExtraLight" Foreground="White" FontSize="150">ГВИНТ</TextBlock>
			<StackPanel Margin="30">
				<TextBlock FontFamily="Impact" HorizontalAlignment="Center" Foreground="AliceBlue" FontSize="25">Введите логин</TextBlock>
				<TextBox Width="200" Text="{Binding Login}"></TextBox>
				<Button Command="{Binding SendLogin}"
						Foreground="White"
						FontFamily="Impact"
						HorizontalContentAlignment="Center"
						BorderBrush="Black"
						BorderThickness="2"
						Margin="5"
						Width="150"
						Height="40"
						HorizontalAlignment="Center"
						FontSize="20"
						Content="Войти"/>
			</StackPanel>
		</DockPanel>

		
	</Panel>
</UserControl>
